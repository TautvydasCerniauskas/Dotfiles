{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "golang": {
      "command": "go-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      },
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },
  "typescript.suggest.autoImports": true,
  "typescript.suggest.enabled": true,
  "typescript.validate.enable": false,
  "typescript.suggestionActions.enabled": true,
  "tsserver.trace.server": "verbose",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "java",
    "typescript",
    "typescriptreact",
    "rust"
  ],
  "git.enableGutters": true,
  "java.jdt.ls.vmargs": "-javaagent:/home/unitato/.m2/repository/org/projectlombok/lombok/1.18.12/lombok-1.18.12.jar -Xbootclasspath/a:/home/unitato.m2/repository/org/projectlombok/lombok/1.18.12/lombok-1.18.12.jar",
  "java.import.maven.enabled": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "explorer.width": 60,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.file.tabCD": true,
  "cSpell.userWords": ["Uuid"],
  "cSpell.ignoreWords": [
    "Workpack",
    "autologging",
    "workpack",
    "workplan",
    "Workplan",
    "workplans",
    "Workpacks",
    "Subreport",
    "Subreports",
    "atoi"
  ],
  "html.filetypes": ["html"],
  "python.jediEnabled": false,
  // suggestions
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": ""
  },

  // diagnostics
  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",
  // "diagnostic.displayByAle": true,
  // "diagnostic.virtualText": true, // this won't work with codelens when error on same line

  // codelens
  "codeLens.enable": true,
  "java.referencesCodeLens.enabled": true,

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",
  "coc.preferences.hoverTarget": "float"
}
